<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="20dp"
        >
        <Button
            android:id="@+id/main_all_home"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="All Home"
            android:background="@drawable/mybutton"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/home_white"
            android:layout_weight=".5"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="10dp"
            />
        <Button
            android:id="@+id/main_add_home"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Add Home"
            android:background="@drawable/mybutton"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/add_home_white"
            android:layout_weight=".5"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="10dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:padding="20dp"

        >
        <Button
            android:id="@+id/main_maps"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Maps"
            android:background="@drawable/mybutton"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/map_white"
            android:layout_weight=".5"
            android:layout_margin="10dp"

            android:layout_gravity="center"
            android:padding="10dp"
            />
        <Button
            android:id="@+id/main_contact_us"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Contact Us"
            android:background="@drawable/mybutton"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/contact_white"
            android:layout_weight=".5"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="10dp"
            />

    </LinearLayout>
</LinearLayout>